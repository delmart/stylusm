---
title: OUR PRODUCTS
---

	<div id="products" class="padded">
		<div class="container text-center">
			<div class="row">
				<% data.products.each do |product| %>
				<div class="col-xs-12 col-sm-6">
					<div class="product">
						<%= image_tag product.picture %>
						<h3> <%=product.name %></h3>
						<p> <%=product.summary %></p>
						<a href="#" class="btn btn-primary"> <%=product.price %></a>		
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>